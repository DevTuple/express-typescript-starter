{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "baseUrl": ".",
    
  },
  "include": [
      "*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}